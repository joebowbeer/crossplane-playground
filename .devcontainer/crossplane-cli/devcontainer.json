    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest",
            "enableNonRootDocker": "true",
            "moby": "false"
        },
        "ghcr.io/joebowbeer/devcontainers-features/crossplane:1": {
            "channel": "stable",
            "version": "current"
        },
        "ghcr.io/jsburckhardt/devcontainer-features/ruff:1": {},
